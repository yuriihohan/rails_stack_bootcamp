<h1>Configure Slider Image Section</h1>

<div class = "links">
  <%= link_to "Add Slider Image", new_slider_image_path %>
</div>
<ul>
  <% @slider_images.each do |slider_image| %>
    <li>
      <div>
        <div class = "contents">
          <span><strong> <%= slider_image.button_text %></strong></span> |
          <span> <%= slider_image.mid_header %></span> |
          <span> <%= slider_image.up_header %></span> 
        </div>

        <div class = "controls">
          <span class = "ud-icons">
             <%= link_to edit_slider_image_path(slider_image) do %>
               <i class='far fa-edit'></i>
             <% end %>
             <%= link_to slider_image_delete_confirmation_path(slider_image) do %>
               <i class='fas fa-trash'></i>
             <% end %>
          </span>
        </div>
      </div>
    </li>
  <% end %>
</ul>
