<h1 class="form_title">Edit Shipping Block</h1> 

  <% if @shipping_info.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@shipping_info.errors.count, "error") %> prohibited
      this article from being saved:
    </h2>
    <ul>
      <% @shipping_info.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
