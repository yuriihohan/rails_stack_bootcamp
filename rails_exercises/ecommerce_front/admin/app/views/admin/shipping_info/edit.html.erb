<%= form_for :shipping_info, :url => url_for(:controller => 'shipping_info', :action => 'update') do |f| -%>
  <%= f.hidden_field :id %>
  <div class="field">
    <%= f.label :header %>
    <%= f.text_field :header, class: 'input-xxlarge' %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'input-xxlarge' %>
  </div>
  <%= f.submit 'Save Shipping Info', :class => 'btn primary' %>
<% end %>


<div class="links">
